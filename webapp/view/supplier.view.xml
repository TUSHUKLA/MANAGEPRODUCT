<mvc:View controllerName="com.tushars.manageproduct.controller.supplier"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
	xmlns:ux="sap.uxap"
    xmlns="sap.m"
		xmlns:l="sap.ui.layout">
    	<l:DynamicSideContent
			id="DynamicSideContent"
			class="sapUiDSCExplored"
			sideContentFallDown="BelowM"
			sideContentPosition="End"
			containerQuery="true"
			showSideContent="false"
			breakpointChanged="updateToggleButtonState">
			<l:mainContent>
				<ux:ObjectPageLayout id="ObjectPageLayout" showTitleInHeaderContent="true" upperCaseAnchorBar="false">
					<ux:headerTitle >
						<ux:ObjectPageHeader id="headerForTest"
										  objectTitle="{/Products(1)/Supplier/CompanyName}">
							<ux:sideContentButton>
								
							</ux:sideContentButton>
							<ux:actions>
							<ux:ObjectPageHeaderActionButton text="Take Action" icon="sap-icon://action" tooltip="action"/>
							</ux:actions>
						</ux:ObjectPageHeader>
					</ux:headerTitle>
					<ux:headerContent>
						<l:VerticalLayout>
							
							
							<Label text="Product ID: {/Products(1)/ProductID}"/>
							<Link text="Price: {/Products(1)/UnitPrice}"/>
							
						</l:VerticalLayout>
						<Text width="200px"
								text="."/>
						<l:VerticalLayout>
							<Label text="Discontinued: {/Suppliers(1)/Products/Discontinued}"/>
							<ProgressIndicator
									percentValue="{/Products(1)/UnitsInStock}"
									displayValue="{/Products(1)/UnitsInStock}%"
									showValue="true"
									state="None"/>
						</l:VerticalLayout>
					</ux:headerContent>
					<ux:sections>
						<ux:ObjectPageSection titleUppercase="false" title="Supplier info.">
							<ux:subSections>
								<ux:ObjectPageSubSection titleUppercase="false">
								<Text text="Address: {/Products(1)/Supplier/Address}" textAlign="Center"/>
								<Text text= " City: {/Products(1)/Supplier/City}" textAlign="Center"/>
								<Text text= "Country: {/Products(1)/Supplier/Country}" textAlign="Center"/>
								<Text text= "Postal code: {/Products(1)/Supplier/PostalCode}" textAlign="Center"/>

								</ux:ObjectPageSubSection>
							</ux:subSections>
						</ux:ObjectPageSection>

						<ux:ObjectPageSection titleUppercase="false" title="Comments">
							<ux:subSections>
								<ux:ObjectPageSubSection title="" titleUppercase="false">
							    <FeedInput post="onPost" showIcon="true" />
								</ux:ObjectPageSubSection>

								
							</ux:subSections>
						</ux:ObjectPageSection>
					</ux:sections>
				</ux:ObjectPageLayout>
			</l:mainContent>
			
		</l:DynamicSideContent>

    
   
   
    
</mvc:View>